<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declaración de la característica de la cámara -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Solicitud de permiso para la cámara -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alejandra_alvarez_20241120_herpm"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Animation Activity -->
        <activity
            android:name=".AnimationActivity"
            android:exported="true" />

        <!-- Video Activity -->
        <activity
            android:name=".VideoActivity"
            android:exported="true" />

        <!-- Driver List Activity -->
        <activity
            android:name=".DriverListActivity"
            android:exported="true" />

        <!-- Capture Photo Activity -->
        <activity
            android:name=".CapturePhotoActivity"
            android:exported="true" />

        <!-- Graph Activity -->
        <activity
            android:name=".GraphActivity"
            android:exported="true" />

    </application>

</manifest>
